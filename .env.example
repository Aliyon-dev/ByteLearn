# ByteLearn Environment Configuration (SQLite Demo)
# Copy this file to .env and update with your values

# Django Settings
SECRET_KEY=django-insecure-demo-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# Using SQLite - no additional configuration needed!
# Database file will be created at: backend/data/db.sqlite3

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Frontend Settings
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Email Configuration (Optional - for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (Production only)
# SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/

# Note: SQLite is perfect for demos and small deployments
# For production with many users, consider PostgreSQL
